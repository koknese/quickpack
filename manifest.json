{
  "manifest_version": 2,
  "name": "QuickPack.tf",
  "version": "1.0",

  "description": "Quickly view Backpack.tf without leaving the site you're on.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["qbp.ts"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/backpackexp.png",
    "default_title": "QuickPack.tf",
    "default_popup": "popup/menu.html"
  }
}
